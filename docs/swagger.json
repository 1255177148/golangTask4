        "/v1/posts/detail": {
            "get": {
                "description": "获取文章详情",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "文章"
                ],
                "summary": "获取文章详情",
                "responses": {
                    "200": {
                        "description": "OK",
